{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-grid-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.alignment }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    align-items: center;
  }

  .ai-collection-item-{{ ai_gen_id }} {
    position: relative;
    width: 206px;
    height: 100px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .ai-collection-item-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-collection-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-collection-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-collection-title-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: {{ block.settings.title_size }}px;
    text-transform: uppercase;
    color: {{ block.settings.title_color }};
    text-align: center;
    width: 90%;
    z-index: 2;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
      justify-content: center;
    }

    .ai-collection-item-{{ ai_gen_id }} {
      width: calc(50% - {{ block.settings.gap_mobile | divided_by: 2 }}px);
      min-width: 150px;
    }
  }

  @media screen and (max-width: 490px) {
    .ai-collection-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
      justify-content: center;
      padding: 0 0 40px;
    }

    .ai-collection-item-{{ ai_gen_id }} {
      width: 100%;
      min-width: 400px;
      
    }
  }
{% endstyle %}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

<div class="ai-collection-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..5) %}
    {% liquid
      assign collection_key = 'collection_' | append: i
      assign collection = block.settings[collection_key]
    %}

    {% if collection != blank %}
      <a href="{{ collection.url }}" class="ai-collection-item-{{ ai_gen_id }}">
        {% if collection.image %}
          <img
            src="{{ collection.image | image_url: width: 412 }}"
            alt="{{ collection.image.alt | escape }}"
            loading="lazy"
            width="206"
            height="100"
            class="ai-collection-image-{{ ai_gen_id }}"
          >
        {% elsif collection.products.first and collection.products.first.featured_image %}
          <img
            src="{{ collection.products.first.featured_image | image_url: width: 412 }}"
            alt="{{ collection.products.first.featured_image.alt | escape }}"
            loading="lazy"
            width="206"
            height="100"
            class="ai-collection-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-collection-placeholder-{{ ai_gen_id }}">
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        <div class="ai-collection-overlay-{{ ai_gen_id }}"></div>
        <h3 class="ai-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
      </a>
    {% else %}
      <div class="ai-collection-item-{{ ai_gen_id }}">
        <div class="ai-collection-placeholder-{{ ai_gen_id }}">
          {{ 'collection-1' | placeholder_svg_tag }}
        </div>
        <div class="ai-collection-overlay-{{ ai_gen_id }}"></div>
        <h3 class="ai-collection-title-{{ ai_gen_id }}">Coleção {{ i }}</h3>
      </div>
    {% endif %}
  {% endfor %}
</div>

