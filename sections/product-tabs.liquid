      "type": "text",
      "id": "tab_warranty_title",
      "label": "Título - Garantia",
      "default": "Garantia",
      "info": "Só aparece se o produto tiver metafield 'garantia'"
    },
    {
      "type": "text",
      "id": "tab_payment_title",
      "label": "Título - Pagamento",
      "default": "Pagamento",
      "info": "Só aparece se o produto tiver metafield 'pagamento'"
    },
    {
      "type": "header",
      "content": "Informações"
    },
    {
      "type": "paragraph",
      "content": "Configure os metafields em: Settings → Custom Data → Products"
    },
    {
      "type": "paragraph",
      "content": "Metafields: custom.descricao_geral, custom.garantia, custom.pagamento"
    }
  ],
  "presets": [
    {
      "name": "Product Tabs"
    }
  ]
}
{% endschema %}
