<section class="duo-{{ sid }}" {{ section.shopify_attributes }}>
  <div class="duo-wrapper-{{ sid }}">
    {%- for block in section.blocks -%}
      {%- if block.type == 'collection' -%}
        {%- assign collection = block.settings.collection -%}
        {%- assign custom_image = block.settings.custom_image -%}
        
        {%- if collection != blank -%}
          <a 
            href="{{ collection.url }}" 
            class="duo-card-{{ sid }}" 
            {{ block.shopify_attributes }}
            aria-label="Ver coleção {{ collection.title }}"
          >
            {%- if custom_image -%}
              <img
                src="{{ custom_image | image_url: width: 672 }}"
                alt="{{ custom_image.alt | default: collection.title | escape }}"
                loading="lazy"
                width="336"
                height="444"
              >
            {%- elsif collection.image -%}
              <img
                src="{{ collection.image | image_url: width: 672 }}"
                alt="{{ collection.image.alt | default: collection.title | escape }}"
                loading="lazy"
                width="336"
                height="444"
              >
            {%- elsif collection.products.first.featured_image -%}
              <img
                src="{{ collection.products.first.featured_image | image_url: width: 672 }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
                width="336"
                height="444"
              >
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag }}
            {%- endif -%}

            {%- if block.settings.show_title -%}
              <div class="duo-overlay-{{ sid }}">
                <h3 class="duo-title-{{ sid }}">
                  {%- if block.settings.custom_title != blank -%}
                    {{ block.settings.custom_title }}
                  {%- else -%}
                    {{ collection.title }}
                  {%- endif -%}
                </h3>
              </div>
            {%- endif -%}
          </a>
        {%- else -%}
          <div class="duo-card-{{ sid }}" {{ block.shopify_attributes }}>
            {%- if custom_image -%}
              <img
                src="{{ custom_image | image_url: width: 672 }}"
                alt="{{ custom_image.alt | escape }}"
                loading="lazy"
                width="336"
                height="444"
              >
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag }}
            {%- endif -%}
            
            {%- if block.settings.show_title -%}
              <div class="duo-overlay-{{ sid }}" style="opacity: 1;">
                <h3 class="duo-title-{{ sid }}">
                  {%- if block.settings.custom_title != blank -%}
                    {{ block.settings.custom_title }}
                  {%- else -%}
                    Selecione uma coleção
                  {%- endif -%}
                </h3>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

