{%- assign sid = section.id | replace: '_', '' | downcase -%}

{% style %}
  /* ===== CONTÃŠINER ===== */
  .duo-{{ sid }} {
    width: 100%;
    max-width: 1320px;
    margin: 0 auto;
    padding: 40px 20px;
    {% if section.settings.bg_image %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 2640 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% else %}
      background: {{ section.settings.bg_color }};
    {% endif %}
  }

  /* ===== WRAPPER DAS IMAGENS ===== */
  .duo-wrapper-{{ sid }} {
    display: flex;
    gap: 24px;
    justify-content: center;
    align-items: center;
    max-height: 528px;
  }

  /* ===== CARD DE IMAGEM ===== */
  .duo-card-{{ sid }} {
    flex: 0 0 336px;
    width: 336px;
    height: 444px;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
  }

  .duo-card-{{ sid }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* ===== RESPONSIVO MOBILE ===== */
  @media (max-width: 749px) {
    .duo-{{ sid }} {
      padding: 20px 16px;
    }

    .duo-wrapper-{{ sid }} {
      flex-direction: column;
      gap: 16px;
      max-height: none;
    }

    .duo-card-{{ sid }} {
      flex: 0 0 auto;
      width: 100%;
      height: 178px;
    }
  }

  /* ===== RESPONSIVO TABLET ===== */
  @media (min-width: 750px) and (max-width: 989px) {
    .duo-card-{{ sid }} {
      flex: 0 0 280px;
      width: 280px;
      height: 370px;
    }
  }
{% endstyle %}

<section class="duo-{{ sid }}" {{ section.shopify_attributes }}>
  <div class="duo-wrapper-{{ sid }}">
    {%- for block in section.blocks -%}
      {%- if block.type == 'image' -%}
        <div class="duo-card-{{ sid }}" {{ block.shopify_attributes }}>
          {%- if block.settings.image -%}
            <img
              src="{{ block.settings.image | image_url: width: 672 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="336"
              height="444"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag }}
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Duo Images",
  "max_blocks": 2,
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Cor de fundo",
      "default": "#F5F5F5"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Imagem de fundo (sobrescreve a cor)"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Duo Images",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}