{%- assign sid = section.id | replace: '_', '' | downcase -%}

{% style %}
  /* ===== CONTÊINER / FUNDOS ===== */
  .pcm-{{ sid }}{padding:0;background:{{ section.settings.section_bg }};text-align:center}
  .pcm-inner-{{ sid }}{padding:0}

  /* ===== TÍTULO ===== */
  .pcm-headbar-{{ sid }}{background:{{ section.settings.header_bg }};border-radius:10px;padding:14px 12px;margin:0 auto 16px;max-width:1320px}
  .pcm-head-{{ sid }}{display:flex;align-items:center;justify-content:center;gap:20px;color:{{ section.settings.header_text_color }}}
  .pcm-line-{{ sid }}{width:75px;height:1px;background:{{ section.settings.header_line_color }}}
  .pcm-title-{{ sid }}{margin:0;font-size:24px;font-weight:700;color:{{ section.settings.header_text_color }}}

  /* ===== "SUPERFÍCIE" ===== */
  .pcm-surface-{{ sid }}{background:{{ section.settings.cards_bg }};border-radius:14px;padding:18px 10px 22px;margin:0 auto 14px;max-width:1320px}

  /* ===== TRILHO ===== */
  .pcm-track-{{ sid }}{display:flex;flex-wrap:nowrap;gap:20px;justify-content:center;overflow:hidden}

  /* ===== CARD - Conforme Figma ===== */
  .pcm-card-{{ sid }}{
    /* Dimensões exatas do Figma */
    flex: 0 0 173px;
    width: 173px;
    height: 393px;
    
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    
    /* Aparência conforme Figma */
    border: 1px solid #EAEAEA;
    background: #FFFFFF;
    border-radius: 6px;
    overflow: hidden;
    position: relative;
    padding: 1px;
    box-sizing: border-box;
  }
  
  /* Container da imagem com isolate para badge */
  .pcm-imgbox-{{ sid }}{
    width: 171px;
    height: 172px;
    background: #f5f5f5;
    overflow: visible; /* IMPORTANTE: permite badge aparecer */
    border-radius: 0;
    flex: none;
    align-self: stretch;
    position: relative;
    isolation: isolate;
  }
  
  .pcm-imgbox-{{ sid }} img{
    width: 171px;
    height: 183px;
    object-fit: cover;
    position: relative;
    z-index: 0;
  }

  /* Badge de desconto - CANTO SUPERIOR DIREITO conforme Figma */
  .pcm-badge-{{ sid }}{
    /* Posicionamento - conforme CSS do Figma */
    position: absolute;
    width: 56px;
    height: 30px;
    left: 115.25px; /* Posição do Figma para ficar à direita */
    top: -0.11px;
    
    /* Auto layout */
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0px;
    
    /* Aparência */
    background: #FA2929;
    border-radius: 6px;
    
    /* Z-index */
    z-index: 1;
    flex: none;
  }
  
  /* Container interno do badge */
  .pcm-badge-content-{{ sid }}{
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 2px 0px 0px;
    width: 34px;
    height: 14px;
  }
  
  .pcm-badge-{{ sid }} svg{
    width: 12px;
    height: 12px;
    flex: none;
  }
  
  .pcm-badge-{{ sid }} span:last-child{
    width: 22px;
    height: 12px;
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 700;
    font-size: 12px;
    line-height: 12px;
    display: flex;
    align-items: center;
    text-align: center;
    color: #FFFFFF;
    flex: none;
  }

  /* ===== BODY - Conforme Figma ===== */
  .pcm-body-{{ sid }}{
    /* Padding conforme Figma */
    padding: 12px 10px;
    
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    
    /* Dimensões */
    width: 171px;
    height: 159px;
    
    flex: none;
    align-self: stretch;
    flex-grow: 1;
  }
  
  /* Margin container para o título */
  .pcm-name-margin-{{ sid }}{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0px 0px 2px;
    width: 151px;
    max-height: 38px;
    flex: none;
    align-self: stretch;
  }
  
  /* Nome do produto - conforme Figma */
  .pcm-name-{{ sid }}{
    /* Tipografia do Figma */
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 12px;
    line-height: 17px;
    
    /* Layout */
    display: flex;
    align-items: center;
    text-align: center;
    
    /* Dimensões */
    width: 151px;
    max-height: 36px;
    
    /* Cor */
    color: #000000;
    margin: 0;
    
    /* Limita a 2 linhas */
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    
    flex: none;
    align-self: stretch;
  }
  
  /* Container de preços - conforme Figma */
  .pcm-pricewrap-{{ sid }}{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0px;
    width: 151px;
    min-height: 46px;
    flex: none;
    align-self: stretch;
    padding-bottom: 12px;
  }
  
  /* Preço riscado - conforme Figma */
  .pcm-compare-{{ sid }}{
    /* Posicionamento conforme Figma */
    position: relative;
    width: 60.18px;
    height: 17px;
    margin: 3px auto 0;
    
    /* Tipografia */
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 17px;
    
    /* Aparência */
    text-decoration-line: line-through;
    color: #000000;
    
    /* Layout */
    display: flex;
    align-items: center;
    text-align: center;
  }
  
  /* Container do preço principal */
  .pcm-price-container-{{ sid }}{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0px;
    position: relative;
    height: 23px;
    width: 100%;
    margin-top: 0;
  }
  
  /* Preço principal - conforme Figma */
  .pcm-price-{{ sid }}{
    width: 82px;
    height: 23px;
    
    /* Tipografia */
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 700;
    font-size: 16px;
    line-height: 22px;
    
    /* Layout */
    display: flex;
    align-items: center;
    text-align: center;
    color: #000000;
    
    flex: none;
  }
  
  /* Paragraph container - conforme Figma */
  .pcm-descbox-{{ sid }}{
    position: relative;
    height: 70px;
    width: 151px;
    margin-top: 0;
    overflow: hidden;
  }
  
  /* Texto da descrição - conforme Figma */
  .pcm-desc-{{ sid }}{
    position: relative;
    width: 150px;
    height: 69px;
    
    /* Tipografia */
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 11px;
    line-height: 10px;
    
    /* Layout */
    align-items: center;
    text-align: center;
    color: #0A0A0A;
    
    /* Limita altura */
    max-height: 70px;
    overflow: hidden;
    margin: 0;
  }
  
  /* Container do botão - conforme Figma */
  .pcm-btnwrap-{{ sid }}{
    /* Auto layout */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 12px 10px;
    
    /* Dimensões */
    width: 171px;
    height: 60px;
    
    /* Aparência */
    background: #FFFFFF;
    
    flex: none;
    align-self: stretch;
  }
  
  /* Botão - conforme Figma */
  .pcm-btn-{{ sid }}{
    /* Auto layout */
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0px;
    
    /* Dimensões */
    width: 151px;
    height: 36px;
    
    /* Aparência */
    background: #414141;
    border-radius: 4px;
    border: none;
    
    /* Tipografia */
    font-family: 'Montserrat', sans-serif;
    font-style: normal;
    font-weight: 700;
    font-size: 10.8px;
    line-height: 15px;
    color: #FFFFFF;
    
    /* Layout */
    text-decoration: none;
    display: flex;
    align-items: center;
    text-align: center;
    
    cursor: pointer;
    transition: background .2s;
    
    flex: none;
    align-self: stretch;
  }
  
  .pcm-btn-{{ sid }}:hover{
    background: #333;
  }

  /* ===== DOTS ===== */
  .pcm-dotsbar-{{ sid }}{width:100%;background:{{ section.settings.dots_bg }};padding:10px 0}
  .pcm-dots-{{ sid }}{display:flex;justify-content:center;gap:8px;margin:0 auto}
  .pcm-dot-{{ sid }}{
    width:5px;height:5px;
    background:{{ section.settings.dots_color }};
    border:none;border-radius:2.5px;cursor:pointer;padding:0;transition:all .15s
  }
  .pcm-dot-{{ sid }}.is-active{
    width:14px;height:5px;
    background:{{ section.settings.dots_active_color }};
  }

  /* ===== RESPONSIVO ===== */
  @media (max-width:749px){
    .pcm-title-{{ sid }}{font-size:18px}
    .pcm-line-{{ sid }}{width:40px}

    .pcm-surface-{{ sid }}{
      padding: 18px 0 22px 12px;
      overflow: hidden;
    }

    /* Track com scroll horizontal */
    .pcm-track-{{ sid }}{
      justify-content: flex-start;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding: 0 20px;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .pcm-track-{{ sid }}::-webkit-scrollbar {
      display: none;
    }

    /* Cards no mobile */
    .pcm-card-{{ sid }}{
      flex: 0 0 260px;
      width: 260px;
      scroll-snap-align: start;
    }

    .pcm-imgbox-{{ sid }}{
      width: 250px;
      height: 250px;
    }
    
    .pcm-imgbox-{{ sid }} img{
      width: 250px;
      height: 250px;
    }
    
    /* Badge no mobile - ajusta posição */
    .pcm-badge-{{ sid }}{
      left: auto;
      right: 10px;
      top: 10px;
    }
    
    .pcm-body-{{ sid }}{
      width: 260px;
      padding: 16px;
    }
    
    .pcm-name-margin-{{ sid }},
    .pcm-name-{{ sid }},
    .pcm-pricewrap-{{ sid }},
    .pcm-descbox-{{ sid }}{
      width: 100%;
    }
    
    .pcm-btnwrap-{{ sid }}{
      width: 260px;
      padding: 16px;
    }
    
    .pcm-btn-{{ sid }}{
      width: 100%;
    }
  }
{% endstyle %}

